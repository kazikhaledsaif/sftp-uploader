# SFTP Server Configuration
# Copy this file to .env and update with your actual credentials
SFTP_HOST=your.sftp.server.com
SFTP_PORT=22
SFTP_USERNAME=your_username
SFTP_PASSWORD=your_password
SFTP_DEFAULT_DESTINATION=/path/to/uploads
SFTP_TIMEOUT=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Rails Configuration
RAILS_ENV=production
RAILS_MAX_THREADS=5
SECRET_KEY_BASE=your_secret_key_base_here_generate_with_rails_secret

# Database (if using PostgreSQL in production)
# DATABASE_URL=postgresql://user:password@localhost/ftp_uploder_production

# Web Authentication (Optional)
# AUTH_USERNAME=admin
# AUTH_PASSWORD=secret
